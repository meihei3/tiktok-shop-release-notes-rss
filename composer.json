{
    "name": "meihei3/tiktok-shop-release-notes-rss",
    "description": "TikTok Shop Developer Documentation RSS Feed Generator",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "symfony/console": "^7.0",
        "symfony/http-client": "^7.0",
        "symfony/yaml": "^7.0",
        "symfony/dependency-injection": "^7.0",
        "symfony/config": "^7.0",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "TikTokShopRss\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TikTokShopRss\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "phpcs": "phpcs --standard=PSR12 src tests",
        "phpcbf": "phpcbf --standard=PSR12 src tests",
        "generate-rss": "php bin/console tts:rss:build"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
