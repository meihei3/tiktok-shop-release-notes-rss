<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:content="http://purl.org/rss/1.0/modules/content/">
    <channel>
        <title>{{ channel.title }}</title>
        <link>{{ channel.link }}</link>
        <description>{{ channel.description }}</description>
        <language>{{ channel.language|default('ja') }}</language>
        <lastBuildDate>{{ lastBuildDate }}</lastBuildDate>
{% for item in items %}
        <item>
            <title>{{ item.title|e }}</title>
            <link>{{ item.link }}</link>
            <description><![CDATA[{{ item.description|raw }}]]></description>
{% for keyword in item.keywords %}
            <category>{{ keyword|e }}</category>
{% endfor %}
            <guid isPermaLink="false">{{ item.guid }}</guid>
            <pubDate>{{ item.pubDate }}</pubDate>
{% if enableContentEncoded and item.contentHtml %}
            <content:encoded><![CDATA[{{ item.contentHtml|raw }}]]></content:encoded>
{% endif %}
        </item>
{% endfor %}
    </channel>
</rss>
